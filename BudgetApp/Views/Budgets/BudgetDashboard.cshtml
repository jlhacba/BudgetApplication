        //    $('#challenges').addClass('btn-default');
        //    $('#graphs').removeClass('btn-primary');
        //    $('#graphs').addClass('btn-default');
        //    $('#lead').removeClass('btn-default');
        //    $('#lead').addClass('btn-primary');
        //});
        $('#diffdrop').change(function () {
            $('#myPartial').unload('/Budgets/BudgetMonthlyPartial?userChoice=' + diff);
            diff = $('#diffdrop option:selected').val();
            $('#myPartial').load('/Budgets/BudgetMonthlyPartial?userChoice=' + diff);
            console.log(diff);
        });
    });



</script>